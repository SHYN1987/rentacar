<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script
  src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="row">

            <div class="col-md-3">
                <form action="/add" method="POST">
                    <input type="text" name="color" id="color" placeholder="Enter Color" required>
                    <input type="text" name="model" id="model" placeholder="Enter model" required><br>
                    <input type="number" name="year" id="year" placeholder="Enter year" required><br>
                    <input type="number" name="preferedPrice" id="preferedPrice" placeholder="Enter Prefered Price" required><br>
                    <input type="number" name="price" id="price" placeholder="Enter Price" required><br>
                    <button type="submit">Add</button>
                </form>
            </div>

            <div class="col-md-9">
                <table class="table">
                    <thead>
                        <tr>
                          <th scope="col">ID</th>
                          <th scope="col">Color</th>
                          <th scope="col">Model</th>
                          <th scope="col">Year</th>
                          <th scope="col">Prefered Price</th>
                          <th scope="col">Price</th>
                          <th scope="col">Options</th>
                      </tr>
                      </thead>
                     <tbody class="table-body">
                         <% car.forEach(car => { %>
                            <tr>
                                <th scope="row"><%= car._id %></th>
                                <th scope="row"><%= car.color %></th>
                                <th scope="row"><%= car.model %></th>
                                <th scope="row"><%= car.year %></th>
                                <th scope="row"><%= car.preferedPrice %></th>
                                <th scope="row"><%= car.price %></th>
                                <th scope="row"><a href="/edit/<%= car._id %>">Edit</a> <a href="javascript:CarDelete('<%= car._id %>')">Delete</a></th>
                            </tr>
                            <% }) %>
                     </tbody>
                 </table>
            </div>
        </div>
    </div>

    <script>
        function CarDelete(id){
    $.ajax({
        url: '/delete/'+id,
        type: 'DELETE',
        success: function(result) {
          console.log("Car deleted")
        }
    });
    
    }
    </script>
</body>
</html>