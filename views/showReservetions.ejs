<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body>
    <table class="table">
        <thead>
            <tr>
              <th scope="col">Car Model</th>  
              <th scope="col">Car Year</th>  
              <th scope="col">Car Color</th>
              <th scope="col">Start Date</th>
              <th scope="col">End Date</th>
              <th scope="col">Pick Up</th>
              <th scope="col">Drop-off</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Driving Licence</th>
              <th scope="col">Adress</th>
              <th scope="col">Passport</th>
          </tr>
          </thead>
         <tbody class="table-body">
             <% reservation.forEach(reservation => { %>
                <tr>

                    <th scope="row">
                        <% cars.forEach(car => { %> 

                      <%  if(car._id == reservation.auto_id ) { %>
                           <%= car.model %>
                      <%  } %>
                           
                        <% }) %>
                    </th>         
                    <th scope="row">
                        <% cars.forEach(car => { %> 

                      <%  if(car._id == reservation.auto_id ) { %>
                           <%= car.year %>
                      <%  } %>
                           
                        <% }) %>
                    </th>
                    <th scope="row">
                        <% cars.forEach(car => { %> 

                      <%  if(car._id == reservation.auto_id ) { %>
                           <%= car.color %>
                      <%  } %>
                           
                        <% }) %>
                    </th>
                    <th scope="row"><%= reservation.startDate %></th>
                    <th scope="row"><%= reservation.endDate %></th>
                    <th scope="row"><%= reservation.pickUp %></th>
                    <th scope="row"><%= reservation.dropOff %></th>
                    <th scope="row"><%= reservation.firstName %></th>
                    <th scope="row"><%= reservation.lastName %></th>
                    <th scope="row"><%= reservation.drivingLicence %></th>
                    <th scope="row"><%= reservation.adress %></th>
                    <th scope="row"><%= reservation.passportNumber %></th>
                </tr>
                <% }) %>
         </tbody>
     </table>
     
    
     <a href="/">Go Back to Cars</a>

     <form action="/logout?_method=DELETE" method="POST">
        <button type="submit">Odjavi se</button>
    </form>
</body>
</html>